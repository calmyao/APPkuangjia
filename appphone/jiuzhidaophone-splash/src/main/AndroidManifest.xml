<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haier.jiuzhidao.jiuzhidaophone_splash">


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".SplshActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="hs.act.phone.SplshActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AdActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="hs.act.phone.AdActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HIOSAdActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="hs.act.phone.HIOSAdActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>

