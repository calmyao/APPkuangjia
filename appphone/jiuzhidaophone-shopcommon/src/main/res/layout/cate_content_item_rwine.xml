<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/y8">

    <ImageView
        android:id="@+id/cate_content_iv_icon"
        android:layout_width="@dimen/x18"
        android:layout_height="@dimen/y18"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x13"
        android:background="@drawable/circel"/>

    <TextView
        android:id="@+id/cate_content_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x13"
        android:layout_toRightOf="@id/cate_content_iv_icon"
        android:gravity="center_vertical"
        android:text="黑啤"
        android:textColor="#000"
        android:textSize="@dimen/text_size_14"/>

    <ImageView
        android:id="@+id/cate_content_iv_arrow"
        android:layout_width="@dimen/x37"
        android:layout_height="@dimen/y41"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/x14"
        android:src="@drawable/shop_cate_cotent_rwine_arrow"/>

</RelativeLayout>

